@using Microsoft.AspNetCore.Identity

@using PrzepisyWeb.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav>
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="menu" asp-page="/Recipes/MyRecipes" >Moje przepisy</a>
        <a class="menu" asp-area="Identity" asp-page="/Account/Manage/PersonalData" title="Manage">Cześć, @UserManager.GetUserName(User)!</a>
        @*<a>*@
        <form id="logoutForm" class="form" asp-page="/Identity/Pages/Account/Logout" asp-route-returnUrl="@Url.Page("/Layout", new { area = "" })">
            <button id="logout" type="submit" class="nav-link menu ">Wyloguj się</button>
        </form>
        @*</a>*@
    }
    else
    {

        <a class="menu" id="login" asp-page="/Identity/Pages/Account/Login">Zaloguj się</a>
    }
</nav>
